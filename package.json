{
  "name": "epsilon-delta-blog",
  "version": "1.0.0",
  "description": "Mathematics blog with Hugo and Hextra theme",
  "main": "index.js",
  "scripts": {
    "hugo:dev": "hugo server --port 1313 --bind 0.0.0.0 --disableFastRender",
    "tailwind:watch": "tailwindcss -i ./assets/css/main.css -o ./assets/css/main.min.css --watch",
    "dev": "npm-run-all --parallel hugo:dev tailwind:watch",
    "tailwind:build": "tailwindcss -i ./assets/css/main.css -o ./assets/css/main.min.css --minify",
    "build": "npm run tailwind:build && hugo --minify --gc",
    "build:production": "npm run tailwind:build && hugo --minify --gc --environment production",
    "clean": "hugo --gc",
    "clean:all": "rm -rf public resources .hugo_build.lock",
    "postinstall": "hugo mod get",
    "test:build": "npm run build && echo 'Build successful!'",
    "deploy:preview": "npm run build:production && netlify deploy --dir=public --prod"
  },
  "keywords": [
    "hugo",
    "blog",
    "mathematics",
    "katex",
    "tailwindcss",
    "hextra",
    "real-analysis"
  ],
  "author": "Epsilon Delta",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
